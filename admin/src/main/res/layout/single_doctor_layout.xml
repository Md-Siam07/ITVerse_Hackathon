<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:backgroundTint="#0694A6"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/us_name"
            android:layout_margin="5dp"
            android:text="User Name"
            >
        </TextView>

        <ImageButton
            android:id="@+id/edit_btn"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_bt"
            android:layout_marginRight="41dp"
            android:backgroundTint="#0D4CEC"></ImageButton>

        <ImageButton
            android:id="@+id/delete_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/delete_bt"
            android:backgroundTint="#DC1818"></ImageButton>
    </RelativeLayout>


    <TextView
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/us_hospital"
        android:layout_margin="5dp"
        android:text="Hospital"
        >

    </TextView>

    <TextView
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/us_designation"
        android:layout_margin="5dp"
        android:text="Designation"
        >

    </TextView>

    <TextView
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/us_phone"
        android:layout_margin="5dp"
        android:text="Phone"
        >

    </TextView>
</LinearLayout>